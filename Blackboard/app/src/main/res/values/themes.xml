<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Blackboard" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_200</item>
    <item name="colorPrimaryVariant">@color/purple_500</item>
    <item name="colorOnPrimary">@color/gray</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <!--        设置状态栏全透明-->
    <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
<!--     Customize your theme here.-->
    <!--        设置状态栏半透明-->
    <!--        <item name="android:windowTranslucentStatus">false</item>-->
<!--    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
    <!-- Customize your theme here. -->


</style>
    <style name="Theme.Blackboard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Blackboard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Blackboard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

