<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blackboard.New.NewActivity">

    <TextView
        android:id="@+id/new_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传你的组织头像"
        android:layout_toRightOf="@id/img_portrait"
        android:layout_alignBottom="@id/img_portrait"
        android:onClick="ChangeAvatar2"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_portrait"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/qq"
        android:onClick="ChangeAvatar2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="60dp"
        android:text="组织名称"
        android:textColor="@color/blue"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/new_name"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="170dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/new_introduction"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="220dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="230dp"
        android:text="组织简介"
        android:textColor="@color/blue"
        android:textSize="20sp" />

    <Button
        android:id="@+id/new_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="70dp"
        android:text="返回"
        android:textColor="@color/blue"
        android:background="@drawable/button_subscribe"
        android:onClick="ClickBack"/>

    <Button
        android:id="@+id/new_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="240dp"
        android:textColor="@color/blue"
        android:text="创建"
        android:background="@drawable/button_subscribe"/>

</RelativeLayout>